<h3>Editing Product</h3>

<!-- NOTE the hidden _method patch, which makes is so we can call for it as PATCH method in routes.  Will NOT work elsewise! -->
<form action='/products/<%= @product.id %>' method='post'>
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>"> 
  <input type='hidden' name='_method' value='patch'> 
  Name: 
  <input type="text" name="product[name]" value="<%= @product.name %>"><br>
  Description: 
  <input type="text" name="product[description]" value="<%= @product.description %>"><br>
  Pricing: 
  <input type="number" step="any" name="product[pricing]" value="<%= @product.pricing %>"><br>
  Category: 
  <select name="product[category]">
    <% @categories.each do |category| %>
      <% if(category.name == @product.category.name) %>
      <option selected="select" value="<%= category.id %>"><%= category.name %></option>
      <% else %>
      <option value="<%= category.id %>"><%= category.name %></option>
      <% end %>
    <% end %>
  </select>
  <input type="submit" value="Edit Product">
</form>


<a href='/products'>Back</a>